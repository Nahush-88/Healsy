Deno.serve(async (req) => {
  try {
    const SITE_URL = 'https://healsy-ai.base44.app';
    const now = new Date().toISOString();
    
    // Routes data - matches components/seo/routes.js
    const ROUTES = [
      { path: '/', priority: 1.0, changefreq: 'daily' },
      { path: '/Dashboard', priority: 0.9, changefreq: 'daily' },
      { path: '/AIHealthCoach', priority: 0.9, changefreq: 'weekly' },
      { path: '/Face', priority: 0.8, changefreq: 'weekly' },
      { path: '/Body', priority: 0.8, changefreq: 'weekly' },
      { path: '/Sleep', priority: 0.8, changefreq: 'weekly' },
      { path: '/Mind', priority: 0.8, changefreq: 'weekly' },
      { path: '/Mood', priority: 0.7, changefreq: 'weekly' },
      { path: '/Exercise', priority: 0.8, changefreq: 'weekly' },
      { path: '/Yoga', priority: 0.7, changefreq: 'weekly' },
      { path: '/Meditation', priority: 0.7, changefreq: 'weekly' },
      { path: '/Water', priority: 0.6, changefreq: 'weekly' },
      { path: '/Diet', priority: 0.8, changefreq: 'weekly' },
      { path: '/Aura', priority: 0.6, changefreq: 'weekly' },
      { path: '/Challenges', priority: 0.7, changefreq: 'weekly' },
    ];
    
    // Build sitemap entries
    const urlEntries = ROUTES
      .map(route => {
        const url = `${SITE_URL}${route.path}`;
        const lastmod = now;
        const changefreq = route.changefreq;
        const priority = route.priority;
        
        return `  <url>
    <loc>${url}</loc>
    <lastmod>${lastmod}</lastmod>
    <changefreq>${changefreq}</changefreq>
    <priority>${priority}</priority>
  </url>`;
      })
      .join('\n');

    const sitemap = `<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
        http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">
${urlEntries}
</urlset>`;

    return new Response(sitemap, {
      status: 200,
      headers: {
        'Content-Type': 'application/xml; charset=utf-8',
        'Cache-Control': 'public, max-age=3600',
      },
    });
  } catch (error) {
    console.error('Error generating sitemap:', error);
    return new Response('Error generating sitemap', {
      status: 500,
      headers: { 'Content-Type': 'text/plain' },
    });
  }
});